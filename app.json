{
    "name": "ECPlaza Tools",
    "logo": "https://ecplaza-tools.herokuapp.com/static/images/logo.png",
    "description": "A barebones Python app, which can easily be deployed to Heroku.",
    "image": "heroku/python",
    "repository": "https://github.com/Danycraft98/ecplaza-tools",
    "keywords": [
        "python",
        "django"
    ],
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev",
            "as": "ecptools_db"
        },
        {
            "plan": "logdna:quaco",
            "as": "ecptools_log"
        },
        {
            "plan": "scout:chair",
            "as": "ecptools_monitor"
        }
    ],
    "env": {
        "SECRET_KEY": {
            "description": "The secret key for the Django application.",
            "generator": "secret"
        }
    },
    "scripts": {
        "heroku-prebuild": "python -m spacy download en",
        "heroku-postbuild": "python manage.py makemigrations && python manage.py migrate"
    },
    "environments": {
        "test": {
            "scripts": {
                "test-setup": "python manage.py collectstatic --noinput",
                "test": "python manage.py test"
            }
        }
    }
}
