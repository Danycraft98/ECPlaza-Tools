{
    "name": "ecplaza-tools",
    "logo": "https://github.com/Danycraft98/ecplaza-tools/tree/master/static/images/logo.png",
    "description": "A barebones Python app, which can easily be deployed to Heroku.",
    "image": "heroku/python",
    "repository": "https://github.com/Danycraft98/ecplaza-tools",
    "keywords": [
        "python",
        "django"
    ],
    "addons": [
        "logdna:quaco",
        "scout:chair",
        "sqreen:developer",
        {
            "plan": "heroku-postgresql:hobby-dev",
            "as": "ecptools_db"
        }
    ],
    "env": {
        "SECRET_KEY": {
            "description": "The secret key for the Django application.",
            "generator": "secret"
        }
    },
    "scripts": {
        "postdeploy": "python -m spacy download en && python manage.py makemigrations && python manage.py migrate",
        "lint": "eslint ",
        "test": "mocha ./test/test*.js --reporter spec",
        "test-coverage": "istanbul cover ./node_modules/.bin/_mocha -- test/test.js test/test-ratelimit.js --reporter spec"
    },
    "environments": {
        "test": {
            "scripts": {
                "test-setup": "python manage.py collectstatic --noinput",
                "test": "python manage.py test"
            }
        }
    },
    "main": "lib/cors-anywhere.js",
    "files": [
        "lib/",
        "test/",
        "Procfile",
        "demo.html",
        "server.js"
    ],
    "dependencies": {
        "http-proxy": "1.11.1",
        "proxy-from-env": "0.0.1"
    },
    "devDependencies": {
        "coveralls": "^2.11.6",
        "eslint": "^2.2.0",
        "istanbul": "^0.4.2",
        "lolex": "^1.5.0",
        "mocha": "^3.4.2",
        "nock": "^8.2.1",
        "supertest": "^2.0.1"
    },
    "engines": {
        "node": ">=0.10.0"
    }
}